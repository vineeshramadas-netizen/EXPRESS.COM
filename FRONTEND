npm install -D tailwindcss postcss autoprefixer
npx tailwindcss init -p
module.exports = {
  content: ['./index.html','./src/**/*.{js,jsx,ts,tsx}'],
  theme: { extend: {} },
  plugins: [],
}
@tailwind base;
@tailwind components;
@tailwind utilities;
import './index.css'
npm run build
# preview the production build locally
npm run preview
