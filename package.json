{
  "name": "express-com",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:api": "npm run start:dev -w @express-com/api",
    "dev:web": "npm run dev -w @express-com/web",
    "build": "npm run build -w @express-com/api && npm run build -w @express-com/web",
    "start": "npm run start -w @express-com/api",
    "prisma:generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
